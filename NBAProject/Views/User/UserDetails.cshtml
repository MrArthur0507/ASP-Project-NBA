@{
}
@model ProjectData.Data.ApplicationUser

<div class="container">
    <div class="row h-100">
        <div class="col-md-6 bg-dark h-100">
            <h2 class="fw-bold text-warning text-center">User Details</h2>
            <p class="text-warning">UserName</p>
            <p class="text-warning pb-4">@Model.UserName</p>
            <p class="text-warning">Email</p>
            <p class="text-warning">@Model.Email</p>
        </div>
    </div>
</div>

<form asp-controller="User" asp-action="DeleteUser" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete User</button>
</form>
