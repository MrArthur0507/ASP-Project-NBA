@{
}
@model List<Models.ViewModels.UserViewModel>


<h1 class="text-warning text-center">User List</h1>


@if (Model.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr class="text-warning">
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var user = Model[i];
                var rowClass = i % 2 == 0 ? "text-warning bg-dark" : "text-dark bg-warning";

                <tr class="@rowClass">
                    <td>@user.Firstname</td>
                    <td>@user.Lastname</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
}