@model Models.ViewModels.SelectTeamViewModel


<div class="container bg-dark bg-opacity-75 p-4 w-50 align-content-center">

    <h2 class="text-warning fw-bold">Search for Games</h2>
<form asp-controller="Game" asp-action="Search" method="post">
    <div class="form-group p-4">
        <label for="homeTeam" class="text-warning fs-5 text-center">Home Team:</label>
        <select id="homeTeam" name="HomeTeamId" asp-for="HomeTeamId" class="form-control" asp-items="@Model.SelectedTeam"></select>
    </div>
    <div class="form-group p-4">
        <label for="visitorTeam" class="text-warning fs-5 text-center">Visitor Team:</label>
        <select id="visitorTeam" name="VisitorTeamId" asp-for="VisitorTeamId" class="form-control" asp-items="@Model.SelectedTeam"></select>
    </div>
    <button type="submit" class="btn btn-warning text-center">Submit</button>
</form>
</div>

