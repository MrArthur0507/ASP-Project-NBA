@model Models.ViewModels.CreatePlayerViewModel

<h2>Add Player</h2>

<form asp-action="AddPlayer" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HeightFeet">Height (Feet)</label>
        <input asp-for="HeightFeet" class="form-control" />
        <span asp-validation-for="HeightFeet" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HeightInches">Height (Inches)</label>
        <input asp-for="HeightInches" class="form-control" />
        <span asp-validation-for="HeightInches" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position">Position</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WeightPounds">Weight (Pounds)</label>
        <input asp-for="WeightPounds" class="form-control" />
        <span asp-validation-for="WeightPounds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamId">Team</label>
        <select asp-for="TeamId" asp-items="Model.SelectedTeam" class="form-control"></select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Player</button>
</form>